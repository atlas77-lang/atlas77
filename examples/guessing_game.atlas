    println("ğŸ® Welcome to the Guessing Game!");
    println("I'm thinking of a number between 1 and 100...");

    let secret = random(1, 100);
    let guess = -1;
    let attempts = 0;

    while guess != secret {
        println("Enter your guess: ");
        guess = input() as int64;
        attempts = attempts + 1;

        if guess < secret {
            print("Too low! ğŸ“‰ Try again.");
        } else {
            if guess > secret {
                print("Too high! ğŸ“ˆ Try again.");
            } else {
                print("ğŸ‰ Correct! You guessed it in ");
                print(attempts as str);
                println(" tries!");
            }
        }
    }
}